<h1>Login!</h1>

<form class="session-form" action="<%= session_url %>" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <label for="user_name">Username:
        <input id="user_name" type="text" name="user[user_name]" value="<%= @user.user_name %>"/>
    </label>
    <br>
    <label for="password">Password:
        <input id="password" type="password" name="user[password]" value="<%= @user.password %>"/>
    </label>
    <br>
    <input type="submit" value="Login"/>
</form>